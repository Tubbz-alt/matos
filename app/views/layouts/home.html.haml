%html
  %head
    %title= "#{t('project.name')} - #{t('project.title')}"
    = stylesheet_link_tag    "home"
    /[if IE 6]
      = stylesheet_link_tag 'ie6'
    /[if IE 7]
      = stylesheet_link_tag 'ie7'
    = javascript_include_tag "home"
    = csrf_meta_tags

  %body

    #container

      #header
        = link_to root_path do 
          = image_tag asset_path('logo.png')

      #navigation
        .left= render 'shared/top_left_navigation'

      = yield
