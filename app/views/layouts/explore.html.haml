%html
  %head
    %title= "#{t('project.name')} - Explore"
    = stylesheet_link_tag   'explore'
    = stylesheet_link_tag   '/stylesheets/ext-all.css'
    = csrf_meta_tags

  %body{:onload => "Ext.onReady(function(){init()})"}

    #header
      = link_to "", root_path

    #navigation
      .left
        = render 'shared/top_left_navigation'
      .right
        = render 'shared/top_right_navigation'

    = yield

    = javascript_include_tag 'http://maps.google.com/maps/api/js?sensor=false'
    = javascript_include_tag '/javascripts/OpenLayers.js'
    = javascript_include_tag :explore