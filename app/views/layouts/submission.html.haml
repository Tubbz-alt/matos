%html
  %head
    %title= "#{t('project.name')} - Submission"
    = stylesheet_link_tag    "submission"
    = stylesheet_link_tag    "printing", :media => "print"
    /[if IE 6]
      = stylesheet_link_tag 'ie6'
    /[if IE 7]
      = stylesheet_link_tag 'ie7'
    = javascript_include_tag "submission"
    = csrf_meta_tags

  %body

    #container

      #header
        = link_to root_path do 
          = image_tag asset_path('logo.png')

      #navigation
        .left
          = render 'shared/top_left_navigation'
        .right
          = render 'shared/top_right_navigation'

      #contents
      
        #content
          - flash.each do |name, msg|
            = content_tag :p, msg, :class => "flasher #{name}" if msg.is_a?(String)

          = yield

      #footer
        %p= t('project.copywrite')
