%h2 Sign up
= semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  = f.inputs do
    = f.input :name
    = f.input :email
    = f.input :organization
    = f.input :requested_role, :as => :radio, :collection => User::REGISTERABLE_ROLES.map{|r|["#{r.humanize} - #{User::ROLE_MAP[r.to_sym]}",r]}, :label => "Requested Role", :selected => User::REGISTERABLE_ROLES.first, :hint => "Requesting a role other than 'General' will require approval by #{I18n.t 'project.name'} and will not be effective immediately"
    = f.input :password
    = f.input :password_confirmation
    = f.input :newsletter, :label => "Subscribe to the #{I18n.t 'project.name'} mailing list"
  = f.actions do
    = f.action :submit, :as => :button, :label => "Sign up", :button_html => { :id => "Sign up"}
%br
= render :partial => "devise/shared/links"

:javascript
  $(document).ready(function() {
    // Select the Public radio if none are selected
    var $radios = $('input:radio[name=user[role]]');
    if($radios.is(':checked') === false) {
      $radios.filter('[value=general]').attr('checked', true);
    }
  });
